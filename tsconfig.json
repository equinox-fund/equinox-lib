{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "module": "ESnext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": true,
    "outDir": "dist",
    "declarationDir": "types",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "checkJs": true
  },
  "exclude": ["**/*.test.tsx", "**/*.test.ts", "**/*.stories.tsx"]
}
